// Generic services conversion rules
// Services for the standard rods
// (scales with respective material)
// SERVICES
// HV, MV, LV
Station {
  stationName flangeTB2S
  type flange

  // Optical fibres convert 1:1 for the time being  
  // 1:1 conversion of Acrylate
Conversion {
  Input {
    Element {
      elementName Acrylate_OTModule_fibers 
      quantity 1
      unit g/m
    }
  }
  Output {
    Element {
      elementName Acrylate
      quantity 1
      unit g/m
      service true
    }
  }
}
// 1:1 conversion of Glass
Conversion {
  Input {
    Element {
      elementName Glass_OTModule_fibers 
      quantity 1
      unit g/m
    }
  }
  Output {
    Element {
      elementName Glass
      quantity 1
      unit g/m
      service true
    }
  }
}  
// 1:1 conversion of PE
Conversion {
  Input {
    Element {
      elementName PE_OTModule_fibers 
      quantity 1
      unit g/m
    }
  }
  Output {
    Element {
      elementName PE
      quantity 1
      unit g/m
      service true
    }
  }
}
  
 //twp convert 1:1 for the time being
 // 1:1 conversion of Cu
Conversion {
  Input {
    Element {
      elementName Cu_TB2S_twp
      quantity 1
      unit g/m
    }
  }
  Output {
    Element {
      elementName Cu
      quantity 1
      unit g/m
      service true
    }
  }
}
 // 1:1 conversion of Al
Conversion {
  Input {
    Element {
      elementName Al_TB2S_twp
      quantity 1
      unit g/m
    }
  }
  Output {
    Element {
      elementName Al
      quantity 1
      unit g/m
      service true
    }
  }
}
 // 1:1 conversion of PE
Conversion {
  Input {
    Element {
      elementName PE_TB2S_twp
      quantity 1
      unit g/m
    }
  }
  Output {
    Element {
      elementName PE
      quantity 1
      unit g/m
      service true
    }
  }
}

  // Power cables conversions
  // As per Habia cables PP1-PP0 (700063813 Rev 03)
  // (10% of one cable per module)
  // Connectors same as 1-rod connector from http://cern.ch/go/P9bG
  // Binder connectors: Micro-T connectors - series 910 
  Conversion {
    // One module's worth of Al_OTModule_power
    Input {
      Element {
        elementName Al_OTModule_power
        quantity 0.612
        unit g/m
      }
    }
    // Per module
    Output {
      Element {
        elementName Al
        quantity 2.91
        unit g/m
        service true
      }
      Element {
        elementName Cu
        quantity 1.16
        unit g/m
        service true
      }
      // Insulator (50% for the module power)
      Element {
        elementName PE
        quantity 4.5 
        unit g/m
        service true
      }
      // Connector
      Element {
        elementName Cu
        quantity 0.27
        unit g
        service false
      }
      Element {
        elementName PE
        quantity 0.22
        unit g
        service false
      }
    }
  }

  Conversion {
    // One module's worth of Al_OTModule_HV
    Input {
      Element {
        elementName Al_HV
        quantity 0.2295
        unit g/m
      }
    }
    // Per module
    Output {
      Element {
        elementName Al
        quantity 0.91 
        unit g/m
        service true
      }
      Element {
        elementName Cu
        quantity 0.32
        unit g/m
        service true
      }
      // Insulator (50% for the HV)
      Element {
        elementName PE
        quantity 4.5
        unit g/m
        service true
      }
      // Connector
      Element {
        elementName Cu
        quantity 0.18
        unit g
        service false
      }
      Element {
        elementName PE
        quantity 0.16
        unit g
        service false
      }
    }
  }

  // Manifolds + radial pipes + holders
  Conversion {
    Input {
      Element {
        elementName Steel_TB2S_pipe
        quantity 7.9
        unit g/m
      }
    }
    Output {
      Element {
        elementName Steel
        quantity 17.2
        unit g/m
        service true
      }
      Element {
        elementName Steel
        quantity 4.2
        unit g
        service false
      }
      Element {
        elementName Al
        quantity 7.4
        unit g
        service false
      }
    }
  }
  Conversion {
    Input {
      Element {
        elementName CO2_TB2S_pipe
        quantity 1.8
        unit g/m
      }
    }
    Output {
      Element {
        elementName CO2
        quantity 1.4
        unit g
        service false
      }
      Element {
        elementName CO2
        quantity 3.7
        unit g/m
        service true
      }
    }
  }

}
