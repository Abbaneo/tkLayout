      cotalphaLimit 0.1
      resolutionLocalXBarrelParam0Inf 0.0053  // mm
      resolutionLocalXBarrelParam1Inf 0.016  // mm
      resolutionLocalXBarrelParam2Inf 0.091  // mm
      resolutionLocalXBarrelParam0Sup 0.007  // mm
      resolutionLocalXBarrelParam1Sup 0.    // mm
      resolutionLocalXBarrelParam2Sup 0.    // mm

      resolutionLocalYBarrelParam0 0.022 // mm
      resolutionLocalYBarrelParam1 0.041  // mm
      resolutionLocalYBarrelParam2 1.5
      resolutionLocalYBarrelParam3 2.8
      resolutionLocalYBarrelParam4 0.7
    }
  }

  Endcap PXE {
